@model Cinema

@{
    ViewData["Title"] = "Creat a New Cinema";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Creat a New Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Creat">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="from-group text-center">
                        <img id="CinemaLogoPreview" class="border rounded-circle" style="max-width:150px"  />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoURL" class="control-label"></label>
                        <input asp-for="LogoURL" class="form-control" />
                        <span asp-validation-for="LogoURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top:10px;">
                        <input type="submit" value="Update" class="float-end btn btn-outline-success " />
                        <a class="btn btn-outline-secondary " asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#LogoURL").val();
        })

        $("#LogoURL").on("change", function() {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        })
    </script>
                    }